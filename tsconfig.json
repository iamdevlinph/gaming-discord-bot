{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "typeRoots": ["src/commands/dn/cap/data/cap-defaults.d.ts"],
    "baseUrl": "./src",
    "paths": {
      "@utils": ["utils"]
    }
  }
}
